
<h1>Hashtag || <%= link_to 'New Featured', new_featured_path %></h1>

<div class="where-hashtag">
<% if params[:name].present? %>
  <p><span class="hashtag-through">#<%= params[:name] %></span></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>F title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featureds.each do |featured| %>
      <tr>
        <td><%= featured.f_title %></td>
        <td><%= render_with_fhashtags(featured.f_hashtag) %></td>
        <td><%= link_to 'Show', featured %></td>
        <td><%= link_to 'Edit', edit_featured_path(featured) %></td>
        <td><%= link_to 'Destroy', featured, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


