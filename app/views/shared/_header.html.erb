    </nav>
    <!-- sns share -->
    <div class='icons'>
      <div class='block'>
        <a class='sns_logo face_logo' href='#n' title='facebook'>
          <img src="<%=asset_path 'facebook_logo.png' %>">
        </a>
      </div>
      <div class='block'>
