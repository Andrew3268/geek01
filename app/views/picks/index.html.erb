<div class="wrap">
  <h1>Picks || <%= link_to "New Category", new_category_path %></h1>

<br><br>
All Categories<br>
<% Category.all.each do |cat| %>
  <%= link_to cat.name, picks_path(category: cat.name) %> 
<% end %>
<br><br>
Only in Navbar<br>
<% Category.where(display_in_navbar: true).each do |cat| %>
  <%= link_to cat.name, picks_path(category: cat.name) %> 
<% end %>
<br><br>


  <table>
    <thead>
      <tr>
        <th>P title</th>
        <th>P body</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @picks.each do |pick| %>
        <tr>
          <td><%= pick.p_title %></td>
          <td><%= pick.category_id %></td>
          <td><%= pick.category.name %></td>
          <td><%= link_to 'Show', pick %></td>
          <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
          <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pick', new_pick_path %>
</div>